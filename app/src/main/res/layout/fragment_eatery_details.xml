<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackgroundBorderless">


    <ImageView
            android:id="@+id/iv_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_close_white_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_name"
            tools:text="Главная столовая"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.17"/>

    <TextView
            android:id="@+id/tv_location"
            tools:text="Обжорный ряд ГУК 2 этаж"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#eeeeee"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.25"/>


    <TextView
            android:id="@+id/tv_description"
            tools:text="Здесь можно покушать первые, вторые блюда, салаты, десерты"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#eeeeee"
            android:maxLines="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.34"/>


    <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.43"/>


    <TextView
            android:id="@+id/tv_schedule_day_1"
            tools:text="понедельник - c 9 до 17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#eeeeee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_divider"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/tv_schedule_day_2"/>

    <TextView
            android:id="@+id/tv_schedule_day_2"
            tools:text="вторник - c 9 до 17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#eeeeee"
            app:layout_constraintStart_toStartOf="@id/tv_schedule_day_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_schedule_day_1"
            app:layout_constraintBottom_toTopOf="@+id/tv_schedule_day_3"/>

    <TextView
            android:id="@+id/tv_schedule_day_3"
            tools:text="среда - c 9 до 17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#eeeeee"
            app:layout_constraintStart_toStartOf="@id/tv_schedule_day_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_schedule_day_2"
            app:layout_constraintBottom_toTopOf="@+id/tv_schedule_day_4"/>

    <TextView
            android:id="@+id/tv_schedule_day_4"
            tools:text="четверг - c 9 до 17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#eeeeee"
            app:layout_constraintStart_toStartOf="@id/tv_schedule_day_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_schedule_day_3"
            app:layout_constraintBottom_toTopOf="@+id/tv_schedule_day_5"/>

    <TextView
            android:id="@+id/tv_schedule_day_5"
            tools:text="пятница - c 9 до 17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#eeeeee"
            app:layout_constraintStart_toStartOf="@id/tv_schedule_day_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_schedule_day_4"
            app:layout_constraintBottom_toTopOf="@+id/tv_schedule_day_6"/>

    <TextView
            android:id="@+id/tv_schedule_day_6"
            tools:text="суббота - c 9 до 17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#eeeeee"
            app:layout_constraintStart_toStartOf="@id/tv_schedule_day_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_schedule_day_5"
            app:layout_constraintBottom_toTopOf="@+id/tv_schedule_day_7"/>

    <TextView
            android:id="@+id/tv_schedule_day_7"
            tools:text="воскресенье - c 9 до 17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#eeeeee"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_schedule_day_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_schedule_day_6"
            />


</androidx.constraintlayout.widget.ConstraintLayout>