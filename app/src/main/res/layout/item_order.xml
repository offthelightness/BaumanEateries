<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_name_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="Свинина по-баумански"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_price_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_price_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:textColor="@android:color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_name_order"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="100 ₽" />

    <TextView
        android:id="@+id/tv_count_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="1 шт."
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/tv_price_order"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_order" />

</androidx.constraintlayout.widget.ConstraintLayout>
